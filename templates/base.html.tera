<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <link rel="icon" type="image/png" href="/favicon.png">


        <title>Journalclub Paper Voting</title>
        <meta name="description" content="Vote for the next paper">
        <meta name="author" content="Lars Haalck">
	{% block head %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <a class="navbar-brand mb-0 h1" href="/">Vote for the next paper</a>
            {% if context.username %}
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="/new_item">New Item</a></li>
                <li class="nav-item"><a class="nav-link" href="/history">History</a></li>
            </ul>
            {% endif %}
            <a class="navbar-brand mb-0 h1 ml-auto" href="/user">
            {% if context.username %} {{ context.username }} {% endif %}üê∏
            </a>
        </nav>
        <div class="container pt-3">
            {% if context.flash %}
                {% if context.flash.0 == "error" %}
                    <div class="alert alert-danger mt-3" role="alert">
                        {{ context.flash.0 }}: {{ context.flash.1 }}
                    </div>
                {% else %}
                    <div class="alert alert-info mt-3" role="alert">
                        {{ context.flash.0 }}: {{ context.flash.1 }}
                    </div>
                {% endif %}
            {% endif %}
            {% block content %}{% endblock content %}
        </div>
    </body>
</html>
